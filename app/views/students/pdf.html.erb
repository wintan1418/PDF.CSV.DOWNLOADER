
  <title>Student List</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px 12px;
      border: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>

  <h1>Students List</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Admission Date</th>
      </tr>
    </thead>
    <tbody>
      <% students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.age %></td>
          <td><%= student.gender %></td>
          <td><%= student.address %></td>
          <td><%= student.phone_number %></td>
          <td><%= student.admission_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

